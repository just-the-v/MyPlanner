<div id="<%= dom_id role %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= role.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Permissions:</strong>
    <%= role.permissions %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this role", role, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this role', edit_role_path(role), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
